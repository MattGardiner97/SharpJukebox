<Window x:Class="SharpJukebox.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpJukebox"
        mc:Ignorable="d"
        Title="TextInputDialog" 
        Width="300" Height="150" SizeToContent="Height" MinWidth="300"
        Background="{StaticResource BasicBackgroundDark}"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        >
    <StackPanel>
        <Label Name="lblHeader" Margin="5"/>
        <TextBox Name="txtInput" Margin="5"/>

        <DockPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btnOK" Content="OK" Margin="2.5" MinWidth="65" Click="btnOK_Click"/>
                <Button Name="btnCancel" Content="Cancel" Margin="2.5" MinWidth="65" Click="btnCancel_Click"/>
            </StackPanel>
        </DockPanel>
    </StackPanel>
</Window>
